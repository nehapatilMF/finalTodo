<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.ChangePassword">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_enter_old_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Old password"
            android:textColor="@color/light_gray"
            android:textSize="18sp"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etOldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_no_underline"
            android:importantForAccessibility="yes"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:textSize="@dimen/text_size"
            tools:ignore="VisualLintTextFieldSize"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_enter_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="New password"
            android:textColor="@color/light_gray"
            android:textSize="18sp"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_no_underline"
            android:importantForAccessibility="yes"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:textSize="@dimen/text_size"
            tools:ignore="VisualLintTextFieldSize"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/_8_characters_minimum_case_sensitive"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Ex. #736473647aQ"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Confirm new password"
            android:textColor="@color/light_gray"
            android:textSize="18sp"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_no_underline"
            android:importantForAccessibility="yes"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:textSize="@dimen/text_size"
            tools:ignore="VisualLintTextFieldSize"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_next"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:background="@drawable/button"
            android:importantForAccessibility="yes"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textSize="16sp"
            tools:ignore="RedundantDescriptionCheck" />

    </LinearLayout>

</LinearLayout>